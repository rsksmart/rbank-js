{
  "version": "1.0.1",
  "command": {
    "init": {
      "exact": true
    },
    "publish": {
      "exact": true,
      "skipGit": true
    },
    "version": {
      "allowBranch": [
        "master",
        "develop",
        "release/*",
        "fix/*"
      ],
      "conventionalCommits": false,
      "exact": true,
      "message": "proj: release %s"
    }
  },
  "packages": [
    "packages/*"
  ]
}
